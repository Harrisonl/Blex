<h2>Listing posts</h2>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Subtitle</th>
      <th>Body</th>
      <th>Author</th>

      <th></th>
    </tr>
  </thead>
  <tbody>
<%= for post <- @posts do %>
    <tr>
      <td><%= link post.title, to: post_path(@conn, :show, post.slug) %></td>
      <td><%= post.subtitle %></td>
      <td><%= post.body %></td>
      <td><%= post.author %></td>
    </tr>
<% end %>
  </tbody>
</table>
